<!-- MainWindow.xaml -->
<Window x:Class="DocxParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DOCX to PostgreSQL" Height="450" Width="600" 
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Margin="0,0,0,10" FontSize="16" FontWeight="Bold">
            Импорт спецификаций в PostgreSQL
        </TextBlock>
        
        <Button x:Name="BrowseButton" 
                Content="Выбрать файл спецификации..." 
                Click="BrowseButton_Click"
                Grid.Row="1" Margin="0,0,0,10"
                Padding="10,5" FontWeight="Bold" HorizontalAlignment="Left"/>
        
        <TextBox x:Name="FilePathTextBox" 
                 IsReadOnly="True"
                 Grid.Row="2" Margin="0,0,0,10"
                 Padding="5" Background="#EEE" Height="25"/>
        
        <TextBlock Grid.Row="3" Margin="0,0,0,10" FontWeight="Bold">
            Параметры подключения: localhost:5432/cable_db (postgres)
        </TextBlock>
        
        <Button x:Name="ProcessButton" 
                Content="Импортировать в PostgreSQL" 
                Click="ProcessButton_Click"
                Grid.Row="4" Margin="0,0,0,10"
                Padding="10,5" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        
        <TextBlock x:Name="StatusText" 
                   Grid.Row="5"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>